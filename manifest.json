{
  "manifest_version": 3,
  "name": "Butter",
  "description": "Changes all supported websites to Butter theme.",
  "version": "1.0.5",
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://mail.proton.me/*",
    "*://shortsmate.com/*",
    "*://smittenkitchen.com/*",
    "*://discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "css": [
        "chatgpt.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://mail.proton.me/*"
      ],
      "css": [
        "protonmail.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://shortsmate.com/*"
      ],
      "css": [
        "shortsmate.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://smittenkitchen.com/*"
      ],
      "css": [
        "smittenkitchen.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://discord.com/*"
      ],
      "css": [
        "discord.css"
      ],
      "run_at": "document_end"
    }
  ]
}